{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "server",
    "outDir": "dist/server",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["server/**/*.ts"]
}
